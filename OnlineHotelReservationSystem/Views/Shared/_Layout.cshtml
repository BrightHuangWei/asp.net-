<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Home")"><img src="~/Content/images/corp-logo.png" height="50" /></a>
                @*@Html.ActionLink("Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Home")</li>
                    <li>@Html.ActionLink("目的地", "About", "Home")</li>
                    <li>@Html.ActionLink("预定房间", "Index", "Home")</li>
                    <li>@Html.ActionLink("最新优惠", "About", "Home")</li>
                    <li>@Html.ActionLink("关于凯宾斯基", "Contact", "Home")</li>
                    <li>@Html.ActionLink("凯宾斯基博客", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    @RenderBody()

    <div class="container body-content">
        <hr />
        <br />
        <footer class="text-center" style="position: relative;margin-top: -30px; height: 30px;clear:both; ">
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序， <span>@Html.ActionLink("登录到后台","LoginSysAdmin", "BackstageManage",new { @class= "color: #999999" })</span></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
