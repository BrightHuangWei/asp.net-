
@{
    Layout = null;
    var reserveInfoData = ViewBag.ReserveInfoData as List<ReserveInfo>;
}
@model ReserveInfo

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>订单管理 - 后台管理系统</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="container">

        <h2 class="h2 text-center">KEMPINSKI后台管理系统</h2>
        <br />
        <p>管理员：<label class="text-danger"> @ViewData["sysname"] </label> , 你好！</p>
        <br />
        <ul id="myTab" class="nav nav-tabs">
            <li>
                @Html.ActionLink("退出系统", "LoginSysAdmin", "BackstageManage", new { name = @ViewData["sysname"] })
            </li>
            <li>
                @Html.ActionLink("订单管理", "OrderListIndex", "BackstageManage", new { })
            </li>
            <li>
                 @Html.ActionLink("用户管理", "UserIndex", "BackstageManage", new { })
            </li>
            <li>
                 @Html.ActionLink("房型管理", "SuiteIndex", "BackstageManage", new { })
            </li>
        </ul>
        <div id="myTabContent" class="tab-content" style="width:1300px; max-width:1500px">

            <div class="tab-pane fade in active" id="orderList">
                <br /><br />
                <div id="orderListDiv">
                    <table class="table table-hover">
                        <caption>订单列表</caption>
                        <thead>
                            <tr>
                                <th>订单号</th>
                                <th>预定账户</th>
                                <th>预定时间</th>
                                <th>房间类型</th>
                                <th>预定数量</th>
                                <th>总价</th>
                                <th>预订人</th>
                                <th>身份证号</th>
                                <th>联系电话</th>
                                <th>入住时间</th>
                                <th>退房时间</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (reserveInfoData != null)
                            {
                                foreach (var item in reserveInfoData)
                                {
                                    <tr>
                                        <td> @item.OrderId</td>
                                        <td> @item.UserName</td>
                                        <td> @item.OrderTime</td>
                                        <td> @item.SuiteType</td>
                                        <td> @item.OrderNunber 间</td>
                                        <td> @item.TotalPrice</td>
                                        <td> @item.OrderName</td>
                                        <td> @item.OrderIdCard</td>
                                        <td> @item.Tel   </td>
                                        <td> @item.ArrivalTime</td>
                                        <td> @item.LeaveTime</td>
                                        <td>
                                            @Html.ActionLink("[  修改  ]", "OrderListEdit", new { OrderId = item.OrderId }) |
                                            @Html.ActionLink("[  删除  ]", "OrderListDelete", new { OrderId = item.OrderId })
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>没有数据</td>
                                    <td>没有数据</td>
                                    <td>没有数据</td>
                                    <td>没有数据</td>
                                    <td>无法执行</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <br /><br />

            </div>
            <div class="tab-pane fade" id="user">

            </div>

            <div class="tab-pane fade" id="add">


            </div>
        </div>

    </div>

</body>
</html>
    >