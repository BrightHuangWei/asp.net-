
@{
    ViewBag.Title = "SingleOrderList";
    var singleList = ViewBag.SingleUserOrderList as List<ReserveInfo>;
}



<div class="container">
    <h2>查看我的订单</h2>

    <table class="table table-hover">
        <caption>所有订单</caption>
        <thead>
            <tr>
                <th>订单号</th>
                <th>房间类型</th>
                <th>预定数量</th>
                <th>预订人</th>
                <th>身份证号</th>
                <th>联系电话</th>
                <th>入住时间</th>
                <th>退房时间</th>
                <th>总价</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @if (singleList != null)
            {
                foreach (var item in singleList)
                {
                    <tr>
                        <td> @item.OrderId</td>
                        <td> @item.SuiteType</td>
                        <td> @item.OrderNunber 间</td>
                        <td> @item.OrderName</td>
                        <td> @item.OrderIdCard</td>
                        <td> @item.Tel</td>
                        <td> @item.ArrivalTime</td>
                        <td> @item.LeaveTime</td>
                        <td class="text-danger"> @item.TotalPrice 元</td>
                        <td>
                             @Html.ActionLink("[  退订  ]", "SingleOrderListDelete", new { OrderId = item.OrderId })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>没有数据</td>
                    <td>没有数据</td>
                    <td>没有数据</td>
                    <td>没有数据</td>
                    <td>没有数据</td>
                    <td>没有数据</td>
                    <td>没有数据</td>
                    <td>没有数据</td>
                    <td>无法执行</td>
                </tr>
            }
        </tbody>
    </table>





</div>